{
  "name": "@redriver/mortar",
  "version": "0.1.11",
  "bin": "lib/index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc",
    "dev": "yarn build && node lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RedRiverSoftware/mortar-rs"
  },
  "author": "Luke Foreman <github@4man.dev>",
  "bugs": {
    "url": "https://github.com/RedRiverSoftware/mortar-rs/issues"
  },
  "homepage": "https://github.com/RedRiverSoftware/mortar-rs#readme",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "typescript": "^4.9.4"
  },
  "optionalDependencies": {
    "@redriver/mortar-linux-x64": "0.1.11",
    "@redriver/mortar-windows-x64": "0.1.11"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "lib/*"
    ],
    "root": true
  }
}
